<%- include('partials/header') %>

<div class="container">
    <div class="jumbotron centered">
        <h1 class="display-3 lead"><i class="fas fa-solid fa-user"></i>Enter Employee Details</h1>

        <form action="/submit" id="bot" method="POST"> 
            <div id="">
                <div class="controls"><br>
                        <label>First name:</label>
                        <input type="text" id="input" name="fName" placeholder="First Name" required><br><br>

                        <label>Last name:</label>
                        <input type="text" id="input" name="lName" placeholder="Last Name" required><br><br>

                        <label class="age">Age:</label>
                        <input type="number" id="input" name="age" placeholder="Age" required><br><br>
                        
                        <label class="gender">Gender:</label>
                        <input type="text" id="input" name="gender" placeholder="Gender" required><br><br>

                        <label class="number">Number:</label>
                        <input type="number" id="input" name="number" placeholder="PhoneNumber" required><br><br>
                        <label class="email">Email:</label>
                        <input type="email" id="input" name="email" placeholder="Email" required><br><br>
                    
                        <button type="submit" class="btn btn-dark">Submit</button>
                </div>
            </div>
        </form>

    </div>
</div>
<%- include('partials/footer') %>